modules = ["nodejs-20", "python-base-3.13"]
hidden = [".config", "package-lock.json"]
run = "npm start"

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_05"
packages = ["unzip"]

[deployment]
run = ["sh", "-c", "npm start"]
deploymentTarget = "autoscale"
ignorePorts = false

[workflows]
runButton = "Testingpublic"

[[workflows.workflow]]
name = "Testingpublic"
mode = "sequential"
author = 43071003

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m http.server"

[[ports]]
localPort = 8000
externalPort = 80
